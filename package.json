{
  "name": "amazon-clone-fullstack",
  "version": "1.0.0",
  "description": "Full-stack e-commerce application with React frontend and Node.js backend",
  "main": "server/app.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "heroku-postbuild": "npm run install-all && npm run build"
  },
  "keywords": [
    "react",
    "nodejs",
    "express",
    "mongodb",
    "ecommerce",
    "amazon-clone",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/amazon-clone.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/amazon-clone/issues"
  },
  "homepage": "https://github.com/yourusername/amazon-clone#readme"
}
