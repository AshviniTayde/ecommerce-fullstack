{
  "name": "ecommerce-fullstack",
  "version": "1.0.0",
  "description": "Full-stack ecommerce application with React frontend and Node.js backend",
  "main": "server/app.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-deps": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "cd client && npm test"
  },
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "fullstack"
  ],
  "author": "AshviniTayde",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AshviniTayde/ecommerce-fullstack.git"
  },
  "bugs": {
    "url": "https://github.com/AshviniTayde/ecommerce-fullstack/issues"
  },
  "homepage": "https://github.com/AshviniTayde/ecommerce-fullstack#readme"
}
